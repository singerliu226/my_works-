{
  "type": "node",
  "build": {
    "installCommand": "npm i",
    "buildCommand": "npm run build",
    "outputDirectory": "dist"
  },
  "run": {
    "command": "node dist/index.js",
    "port": 3000
  },
  "env": {
    "NODE_ENV": "production"
  },
  "volumes": [
    { "target": "/app/data", "name": "hotspot-data" }
  ]
}


